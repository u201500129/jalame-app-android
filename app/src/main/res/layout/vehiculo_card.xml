<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:id="@+id/vehiculoCardView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fotoVehiculo"
            android:src="@drawable/icon_vehiculo01"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placa:"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/lblPlaca"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca y modelo:"
                android:padding="5dp"
                android:textSize="12dp"
                android:id="@+id/lblMarcaModelo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color:"
                android:padding="5dp"
                android:textSize="12dp"
                android:id="@+id/lblColor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conductor:"
                android:padding="5dp"
                android:textSize="12dp"
                android:id="@+id/lblConductor"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>